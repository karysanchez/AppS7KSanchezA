<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppS7KSanchezA.Login">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="#215178" Padding="20" CornerRadius="0">
                <Label Text="SQLite" HorizontalTextAlignment="Center" TextColor="White" FontSize="18"/>
            </Frame>

            <Label Text="Ventana de Login" FontSize="Medium" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtUsuario" Placeholder="Ingrese el usuario"/>
            <Entry x:Name="txtContrasenia" Placeholder="Ingrese la contrasenia" IsPassword="True"/>
            <Button x:Name="btnIniciar" Text="Iniciar sesión" Clicked="btnIniciar_Clicked" />
            <Button x:Name="btnRegistrar" Text="Registrar" Clicked="btnRegistrar_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>